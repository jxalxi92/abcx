<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewModel.General.fragmento_consultar_datos">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llbusqueda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_Doi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/TxtDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:ems="4"
                        android:hint="DNI"
                        android:inputType='number'
                        android:maxLength="8" />
                </android.support.design.widget.TextInputLayout>

                <!-- FAB -->


                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:background="@color/colorPrimary"
                    android:text="Buscar"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/btnNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:text="Nuevo"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:text="DNI" />

                <EditText
                    android:id="@+id/txt_dni_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/textView12"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_alignTop="@+id/txt_persona"
                    android:lineSpacingExtra="10sp"
                    android:text="Persona:" />

                <EditText
                    android:id="@+id/txt_persona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txt_dni_r"

                    android:layout_alignStart="@+id/txt_dni_r"

                    android:layout_below="@+id/txt_dni_r"
                    android:layout_marginTop="12dp"
                    android:editable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/txt_persona"
                    android:layout_marginTop="30dp"
                    android:text="Dirección:" />

                <EditText
                    android:id="@+id/txt_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView14"
                    android:layout_alignEnd="@+id/txt_persona"
                    android:layout_alignStart="@+id/txt_persona"
                    android:layout_below="@+id/txt_persona"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/txt_direccion"
                    android:layout_marginTop="30dp"
                    android:text="Referencia:" />

                <EditText
                    android:id="@+id/txt_referencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_alignEnd="@+id/txt_persona"
                    android:layout_alignStart="@+id/txt_persona"
                    android:layout_below="@+id/txt_direccion"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/txt_EstadoCivil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/Txt_GradoInstruccion"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:layout_alignEnd="@+id/Txt_GradoInstruccion" />

                <EditText
                    android:id="@+id/Txt_GradoInstruccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView16"
                    android:layout_alignBottom="@+id/textView16"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:layout_alignEnd="@+id/txt_referencia" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView14"
                    android:layout_below="@+id/txt_referencia"
                    android:layout_marginTop="24dp"
                    android:text="Estado Civil:" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_below="@+id/textView15"
                    android:layout_marginTop="22dp"
                    android:text="Grado Instrucción:" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView16"
                    android:layout_below="@+id/textView16"
                    android:layout_marginTop="30dp"
                    android:text="Teléfono:" />

                <EditText
                    android:id="@+id/txt_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView19"
                    android:layout_alignEnd="@+id/spn_grado"
                    android:layout_alignStart="@+id/txt_referencia"
                    android:ems="10"
                    android:inputType="phone"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView19"
                    android:layout_below="@+id/textView19"
                    android:layout_marginTop="23dp"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignEnd="@+id/txt_telefono"

                    android:layout_alignStart="@+id/txt_telefono"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txt_ocupacion"
                    android:layout_alignBottom="@+id/txt_ocupacion"
                    android:layout_alignStart="@+id/textView6"
                    android:text="Ocupación:" />

                <EditText
                    android:id="@+id/txt_ocupacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txt_email"
                    android:layout_alignStart="@+id/txt_telefono"
                    android:layout_below="@+id/txt_email"
                    android:layout_marginTop="14dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView14"
                    android:layout_below="@+id/txt_ocupacion"
                    android:layout_marginTop="21dp"
                    android:text="Nro Hijos:" />

                <EditText
                    android:id="@+id/txt_nrohijos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView10"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_alignStart="@+id/txt_ocupacion"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:textSize="14sp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_guardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txt_ocupacion"
                    android:layout_below="@+id/textView10"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:clickable="true"
                    app:backgroundTint="@color/colorPrimary"
                    app:fabSize="normal"
                    app:srcCompat="@android:drawable/ic_input_add" />


            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
